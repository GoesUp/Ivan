<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity"

        android:background="@drawable/gradient"
>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.25"
            android:textSize="75sp" android:fontFamily="cursive" android:id="@+id/textView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:inputType="text|textAutoCorrect|textAutoComplete"
            android:ems="10"
            android:maxLength="30"
            android:id="@+id/editText" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:singleLine="true" android:hint="@string/searchBarHint"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/custom_edittext"
            android:theme="@style/MainEditText"


            android:textColor="@android:color/darker_gray"/>
    <TextView
            android:text="@string/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="192dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="192dp" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="327dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintVertical_bias="0.9"/>
    <TextView
            android:text="@string/loadingResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/magicText" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="151dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="152dp" android:fontFamily="cursive" android:typeface="normal"
            android:textSize="20sp"/>

</android.support.constraint.ConstraintLayout>